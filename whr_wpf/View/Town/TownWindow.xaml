<Window x:Class="whr_wpf.TownWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:whr_wpf"
        mc:Ignorable="d"
        Title="{Binding TownName}" Height="450" Width="225" Background="#FF006699" ShowInTaskbar="False" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <StackPanel x:Name="CommandPanel" HorizontalAlignment="Center" VerticalAlignment="Top">
        <Label x:Name="TownNameLabel"  Content="{Binding TownName}" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" Width="205" Height="50" FontSize="32" Foreground="White"/>
        <Label x:Name="PopulationLabel"  Content="{Binding Population}" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" Width="205" Height="30" FontSize="16" Foreground="White"/>
        <Button x:Name="CloseBtn"  Content="閉じる" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" Width="205" Height="30" FontSize="16" Foreground="Black" Click="Close_Click"/>
    </StackPanel>
</Window>
